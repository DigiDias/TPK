  "type": "project",
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "twbs/bootstrap": "*",
    "izniburak/router": "^2.5",
    "symfony/http-foundation": "^5.4"
  },

  "conflict": {
    "cypresslab/php-curry": "*"
